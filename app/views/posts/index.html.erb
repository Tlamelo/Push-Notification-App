<h1>Listing posts</h1>

<table class='table' id='posts'>
  <tr>    
    <th>Name</th>
    <th>Description</th>    
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <%= render :partial => "post", :locals => {:post => post, :publish => false} %>  
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>

<%= subscribe_to "/posts" %>